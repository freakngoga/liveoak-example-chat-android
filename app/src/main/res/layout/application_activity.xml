<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.liveoak.android.chat.ApplicationActivity">

    <fragment
        android:name="io.liveoak.android.chat.SubmitFragment"
        android:id="@+id/submit_fragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        tools:layout="@layout/submit_fragment" />

    <fragment
        android:name="io.liveoak.android.chat.ChatsFragment"
        android:id="@+id/chats_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@id/submit_fragment"
        tools:layout="@layout/chats_fragment"
    />

</RelativeLayout>
