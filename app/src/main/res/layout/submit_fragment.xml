<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/submit_fragment_background"
    android:paddingLeft="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context="io.liveoak.example.android.chat.SubmitFragment">

    <EditText
        android:id="@+id/submit_fragment_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:inputType="text|textAutoCorrect|textShortMessage"
        android:background="@drawable/rounder_corners"
        android:hint="@string/submit_fragment_edit_message_hint"
        android:layout_marginLeft="@dimen/submit_fragment_horizontal_margin"
        android:layout_marginTop="@dimen/submit_fragment_vertical_margin"
        android:layout_marginBottom="@dimen/submit_fragment_vertical_margin"
        android:textSize="@dimen/submit_fragment_font_size"
        />

    <Button
        android:id="@+id/submit_fragment_submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit_fragment_send"
        android:enabled="true"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="@color/colorPrimary"
        android:textStyle="normal"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="center_vertical"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:textSize="@dimen/submit_fragment_font_size"
        />

</LinearLayout>
